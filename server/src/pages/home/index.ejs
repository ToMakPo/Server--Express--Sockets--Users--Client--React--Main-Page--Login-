	<header>
		<h1>Welcome to the Home Page</h1>
		<nav>
			<button onclick="logout()">Logout</button>
		</nav>
	</header>

	<main>
		<p>This is the home page. You are logged in!</p>
	</main>

	<script>
		function toggleForm() {
			function logout () {
				window.location.href = '/logout';
			}
		}
	</script>
</body>
</html>